						<span class="text-muted"
							><i class="fas fa-thumbs-up me-1"></i>3 reviews</span
						>
						<span class="text-muted position-absolute bottom-1 end-0 me-2"
							>${{house.price}}/night</span
						>
					</p>
				</div>
			</div>
		</a>
		</div>
			{{/each}}
