{{> header }}
<!-- prima navbar con logo e tasto user e logout -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<div class="container">
		<!-- <a class="navbar-brand" href="#">Navbar</a> -->
		<!-- button relativo al menu hamburger per visualizz da mobile -->
		<button
			class="navbar-toggler"
			type="button"
			data-bs-toggle="collapse"
			data-bs-target="#navbarSupportedContent"
			aria-controls="navbarSupportedContent"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<form action="index.html" method="post" class="d-flex">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item me-4">
						<!-- droplist location -->
						<div class="input-group">
							<span class="input-group-text" id="basic-addon1"
								><i class="fas fa-map-marker-alt"></i
							></span>
							<select class="form-select" aria-label="Default select example">
								<option selected>Any Location</option>
								<option value="1">Koh Panghan</option>
								<option value="2">Koh Samui</option>
								<option value="3">Bali</option>
							</select>
						</div>
						<!-- <a class="nav-link active" aria-current="page" href="#">Home</a> -->
					</li>
					<li class="nav-item me-4">
						<div class="input-group">
							<span class="input-group-text" id="basic-addon1"
								><i class="fas fa-home"></i
							></span>
							<select class="form-select" aria-label="Default select example">
								<option selected>Any Rooms</option>
								<option value="1">1 Room</option>
								<option value="2">2 Rooms</option>
								<option value="3">3 Rooms</option>
								<option value="4">4 Rooms</option>
								<option value="5">5 Rooms</option>
							</select>
						</div>
					</li>
					<li class="nav-item me-4" style="min-width: 20%">
						<div class="input-group">
							<span class="input-group-text" id="basic-addon1"
								><i class="fas fa-dollar-sign"></i
							></span>
							<input
								type="number"
								min="0"
								max="5000"
								class="form-control"
								placeholder="max price"
								aria-label="max price"
								aria-describedby="basic-addon1"
							/>
						</div>
					</li>
					<li class="nav-item me-4">
						<div class="input-group">
							<span class="input-group-text" id="basic-addon1"
								><i class="fas fa-sort"></i
							></span>
							<select class="form-select" aria-label="Default select example">
								<option selected>Price (low to high)</option>
								<option value="1">Price (high to low)</option>
							</select>
						</div>
					</li>
				</ul>
				<div class="d-flex">
					<input
						class="form-control me-4"
						type="search"
						placeholder="House name..."
						aria-label="Search"
					/>
					<button
						class="btn btn-secondary"
						style="background-color: #008080"
						type="submit"
					>
						Search
					</button>
				</div>
			</form>
		</div>
	</div>
</nav>
