{{> header }}
    <div class="container">
      <div class="row gx-5">
        <div class="col-sm-4">
          <h1 class="mt-3 border-bottom">Profile</h1>
          <form class="mt-4" action="index.html" method="post">
            <div class="mb-3">
              <label for="formGroupExampleInput" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="formGroupExampleInput"
                placeholder="Marco Ferrera"
              />
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label"
                >Email</label
              >
              <input
                type="text"
                class="form-control"
                id="formGroupExampleInput2"
                placeholder="marco@tortugacoders.com"
              />
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label"
                >Profile Picture</label
              ><br />
              <img
                src="https://randomuser.me/api/portraits/men/11.jpg"
                alt="avatar image"
                class="avatar-image rounded-circle"
              />
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                id="formGroupExampleInput2"
                placeholder="https://randomuser.me/api/portraits/me"
              />
            </div>
            <a
              href="#"
              class="btn btn-secondary mb-3"
              style="background-color: #008080"
              >Save Changes</a
            >
          </form>
        </div>

        <div class="col-sm-8">
          <h1 class="mt-3 border-bottom">My Listings</h1>
          <form class="mt-4" action="index.html" method="post">
            <a
              href="#"
              class="btn btn-secondary mb-3"
              style="background-color: #008080"
              >List a House</a
            >
          </form>
          <div class="">
            <p class="border p-2">You don't have any house listed</p>
          </div>
        </div>
      </div>
    </div>
